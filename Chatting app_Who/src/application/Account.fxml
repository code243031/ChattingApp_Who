<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="800.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AccountController">
   <children>
      <Label text="회원 상태 설정" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="15.0" right="15.0" top="15.0" />
         </VBox.margin>
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <RadioButton fx:id="mode_guest" mnemonicParsing="false" selected="true" text="게스트 모드">
               <HBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </HBox.margin>
               <toggleGroup>
                  <ToggleGroup fx:id="select_mode" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="mode_member" mnemonicParsing="false" text="회원 모드" toggleGroup="$select_mode">
               <HBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </HBox.margin>
            </RadioButton>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="50.0" right="50.0" />
         </padding>
      </HBox>
      <TextArea editable="false" prefHeight="155.0" prefWidth="600.0" text="닉네임과 간단한 정보만 입력해서 로그인합니다. 친구 기능을 사용할 수 없습니다." wrapText="true">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </TextArea>
      <Group>
         <children>
            <FlowPane disable="true" prefHeight="72.0" prefWidth="576.0">
               <children>
                  <Label text="아이디" />
                  <TextField prefHeight="44.0" prefWidth="425.0">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </TextField>
               </children>
            </FlowPane>
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Group>
      <Group>
         <children>
            <FlowPane prefHeight="72.0" prefWidth="521.0">
               <children>
                  <Label text="닉네임" />
                  <TextField prefHeight="44.0" prefWidth="425.0">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </TextField>
               </children>
            </FlowPane>
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Group>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
